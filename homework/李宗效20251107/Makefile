# 可执行文件名
TARGET = main.exe
# 源文件
SOURCES = main.cpp add.cpp sub.cpp
# 对象文件
OBJECTS = $(SOURCES:.cpp=.o)
# 编译器
CXX = g++
# 编译选项
CXXFLAGS = -Wall -g -std=c++11
# 链接选项
LDFLAGS =
# 默认目标
all: $(TARGET)
# 链接规则
$(TARGET): $(OBJECTS)
	$(CXX) $(LDFLAGS) $(OBJECTS) -o $@
# 编译规则
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@
# 清理规则
clean:
	rm -f $(OBJECTS) $(TARGET)
.PHONY: all clean